extends layout

block content
  h1= title
  p Welcome to the ice cream pug
  div(class="container-fluid")
        div(class="row")
            -
                let icecream = [
                    {
                        "brand": "amul",
                        "flavour": "vanilla",
                        "cost": 10
                    },
                    {
                        "brand": "muscati",
                        "flavour": "butterscotch",
                        "cost": 12
                    },
                    {
                        "brand": "kwality walls",
                        "flavour": "dark chocolate",
                        "cost": 15
                    },                   
                ]
            each v,index in icecream
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.brand}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.flavour}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.cost}
  script.                
    function buy(itemNo)
    {
        alert(`you purchased Item ${itemNo+1}`)
    }